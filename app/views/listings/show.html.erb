<div class="container-fluid">
  <!-- Being BS carousel -->
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <% @listing.photos.each_with_index do |photo, i| %>
        <div class="item <%= 'active' if i == 0 %>">
          <%= image_tag photo.full_url %>

          <div class="carousel-caption">
            <%= photo.caption %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>
  <!-- End BS carousel -->

  <ul id="base-details">
    <li class="beds-baths">
      <div>
        <span id="beds"><%= @listing.beds %></span>/<span id="baths"><%= @listing.baths %></span>
      </div>
      <div class="beds-baths">
        br/ba
      </div>
    </li>
    <li class="sqft">
      <div>
        <span class="sqft"><%= @listing.sqft %></span>
      </div>
      <div class="sqft">
        sq.ft
      </div>
    </li>
    <li id="price"><%= number_to_currency(@listing.price, precision: 0) %></li>
  </ul>

  <div class="arrow-down"></div>

  <div class="row">
    <div class="col-md-3">
      <ul id="key-points" class="home-details">
        <% @listing.feature_list.each do |feature| %>
          <li class="key-point"><%= feature %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-3 ">
      <div id="description" class="home-details">
        <%= @listing.description %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="contact">
        <% if @listing.phone %>
          <a href="<%= @listing.tel %>" class="phone">Call <%= @listing.phone %></a>
        <% end %>
        <% if @listing.email %>
          <a href="mailto:<%= @listing.email %>" class="email">Email <%= @listing.email %></a>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% content_for :additional_js do %>
  <%= javascript_include_tag 'listing' %>
  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<% end %>
